<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite">
    <LinearLayout
        android:id="@+id/ly_comment_topTitle"
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_height="40dp">

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:scaleType="center"
            android:src="@drawable/icon_back" />
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"
            android:text="댓글"></TextView>

        <ImageButton
            android:id="@+id/comment_dm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/paper_plane" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/ly_content"
        android:layout_below="@+id/ly_comment_topTitle"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/user_img"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_default_profileimg"></de.hdodenhof.circleimageview.CircleImageView>
        <LinearLayout
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/user_id"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:text="idddd"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:id="@+id/user_content"
                android:text="soososososso"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_height="40dp"></TextView>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ly_content"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"></View>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/rv_comment"
        android:layout_below="@id/line"
        android:layout_above="@id/ly_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>


    <View
        android:layout_above="@+id/ly_comment"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"></View>
    <LinearLayout
        android:id="@+id/ly_comment"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/comment_profileImg"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_default_profileimg"></de.hdodenhof.circleimageview.CircleImageView>
        <EditText
            android:id="@+id/et_write_comment"
            android:hint="댓글 달기..."
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:background="@color/transparent"></EditText>

        <Button
            android:id="@+id/comment_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="게시"
            android:textColor="@color/colorBlue"
            android:background="@color/transparent"></Button>

    </LinearLayout>

</RelativeLayout>