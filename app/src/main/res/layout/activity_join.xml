<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#1130DC55"
    tools:context=".JoinActivity">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497"
        app:srcCompat="@drawable/shape_round_rectangle" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/nanumpen"
        android:text="SIGN UP"
        android:textColor="#78DC97"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <EditText
        android:id="@+id/et_join_id"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/shape_edittext"
        android:ems="10"
        android:hint=" 아이디를 입력하세요"
        android:inputType="textPersonName"
        android:textColor="#818181"
        android:textColorHint="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/et_join_pw"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_edittext"
        android:ems="10"
        android:hint=" 비밀번호를 입력하세요"
        android:inputType="textPassword"
        android:textColor="#818181"
        android:textColorHint="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/et_join_id"
        app:layout_constraintStart_toStartOf="@+id/et_join_id"
        app:layout_constraintTop_toBottomOf="@+id/et_join_id" />

    <EditText
        android:id="@+id/et_join_nick"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_edittext"
        android:ems="10"
        android:hint=" 닉네임을 입력하세요"
        android:inputType="textPersonName"
        android:textColor="#818181"
        android:textColorHint="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/et_join_pw"
        app:layout_constraintStart_toStartOf="@+id/et_join_pw"
        app:layout_constraintTop_toBottomOf="@+id/et_join_pw" />

    <EditText
        android:id="@+id/et_join_phpne"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_edittext"
        android:ems="10"
        android:hint=" 전화번호를 입력하세요"
        android:inputType="textPersonName"
        android:textColor="#818181"
        android:textColorHint="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/et_join_nick"
        app:layout_constraintStart_toStartOf="@+id/et_join_nick"
        app:layout_constraintTop_toBottomOf="@+id/et_join_nick" />

    <Button
        android:id="@+id/btn_join_submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:backgroundTint="#FBE39A"
        android:text="SIGN UP"
        android:textColor="#818181"
        app:layout_constraintEnd_toEndOf="@+id/et_join_phpne"
        app:layout_constraintStart_toStartOf="@+id/et_join_phpne"
        app:layout_constraintTop_toBottomOf="@+id/et_join_phpne" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/imageView6"
        app:srcCompat="@drawable/star" />

</androidx.constraintlayout.widget.ConstraintLayout>