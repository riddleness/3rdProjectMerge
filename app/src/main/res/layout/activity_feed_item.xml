<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="1dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_profile_img"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_default_profileimg"></de.hdodenhof.circleimageview.CircleImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_profile_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user_id"
                android:textSize="16dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"></TextView>
            <TextView
                android:id="@+id/item_profile_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="loacation"
                android:textSize="13dp"
                android:textColor="@color/colorBlack"></TextView>
        </LinearLayout>
        <ImageView
            android:id="@+id/item_profile_menu"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:src="@drawable/icon_item_menu"></ImageView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/colorLightGray"></View>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_main_img"
        android:layout_width="match_parent"
        android:layout_height="341dp"
        android:scaleType="fitXY"></androidx.viewpager.widget.ViewPager>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/colorLightGray"></View>
    <LinearLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:padding="3dp">
        <ImageView
            android:id="@+id/feed_like"
            android:layout_width="0dp"
            android:layout_marginLeft="3dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_heart"></ImageView>
        <ImageView
            android:id="@+id/feed_comments"
            android:layout_width="0dp"
            android:paddingTop="2dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_comments"></ImageView>
        <ImageView
            android:id="@+id/feed_dm"
            android:layout_width="0dp"
            android:padding="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_dm"></ImageView>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"></View>
        <ImageView
            android:id="@+id/feed_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/icon_save"></ImageView>
    </LinearLayout>
    <TextView
        android:id="@+id/item_main_likeNum"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:text="좋아요"
        android:textSize="16dp"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_main_userId"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="user_id"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/item_main_caption"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"></TextView>
    </LinearLayout>
    <TextView
        android:id="@+id/item_main_comment"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/colorGray"
        android:text="댓글"></TextView>
</LinearLayout>
