<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_marginTop="5dp"
    android:padding="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginBottom="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rv_comment_profileImg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:layout_weight="1.2"
        android:src="@drawable/icon_default_profileimg"></de.hdodenhof.circleimageview.CircleImageView>
    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="8">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rv_comment_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="id view"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:background="@color/transparent"></TextView>
            <TextView
                android:id="@+id/rv_comment_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="comment 내용"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"
                android:background="@color/transparent"></TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/rv_comment_likeNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="좋아요 개수"
            android:textColor="@color/colorGray"
            android:textSize="13dp"
            android:textStyle="bold"></TextView>

    </LinearLayout>
    <ImageView
        android:src="@drawable/icon_comment_like"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"></ImageView>
</LinearLayout>